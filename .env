# How often to check /etc/squid for config file changes (seconds)
CONFIG_CHECK_INTERVAL_SECONDS=30

# Periodic log rotation interval (seconds), default is 24h
LOG_ROTATE_INTERVAL_SECONDS=86400

# Rotate logs early if access.log or cache.log exceeds this size (MB)
LOG_ROTATE_MAX_SIZE_MB=100

# Number of rotated log files to keep (squid logfile_rotate)
LOGFILE_ROTATE=10

# Dynamic cache_mem sizing:
# cache_mem = total_memory_mb * CACHE_MEM_RATIO_PCT / 100, clamped by MIN/MAX
CACHE_MEM_RATIO_PCT=10
CACHE_MEM_MIN_MB=64
CACHE_MEM_MAX_MB=2048

# Dynamic cache_dir sizing:
# cache_dir_size = free_space_mb * CACHE_DIR_RATIO_PCT / 100
# then clamped by effective min and max; LEVEL1/LEVEL2 are squid cache_dir layout params
CACHE_DIR_RATIO_PCT=50
CACHE_DIR_MIN_MB=256
CACHE_DIR_LEVEL1=16
CACHE_DIR_LEVEL2=256
